[user]
    name = Your Name
    email = your.email@example.com

[init]
    defaultBranch = main

[core]
    editor = vim
    autocrlf = input
    ignorecase = false

[color]
    ui = auto

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --oneline --graph --decorate
    df = diff
    dfs = diff --staged
    aa = add --all
    cm = commit -m
    amend = commit --amend --no-edit
    unstage = reset HEAD --
    last = log -1 HEAD
    branches = branch -a
    remotes = remote -v
    stashes = stash list

[pull]
    rebase = false

[push]
    default = current
    autoSetupRemote = true

[fetch]
    prune = true

[diff]
    colorMoved = default

[merge]
    conflictstyle = diff3
